---
import { SEO } from "astro-seo";
---

<!doctype html>
<html lang="en">
	<head>
  <meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
	<SEO
  title="Global Legal | Abogados en Ibagué - Derecho Civil, Penal, Empresarial y Laboral"
  description="Bufete de abogados en Ibagué, Tolima. Expertos en derecho civil, penal, administrativo, empresarial y laboral. Asesoría legal confiable y efectiva para personas y empresas."
  openGraph={{
    basic: {
      title: "Global Legal | Asesoría Jurídica en Ibagué",
      type: "website",
      image: "https://globallegal24.com/logo.svg",
    }
  }}
  extend={{
    link: [{ rel: "icon", href: "/favicon.ico" }],
    meta: [
      {
        name: "og:image",
        content: "https://globallegal24.com/logo.svg",
      },
      { name: "og:title", content: "Global Legal | Abogados en Ibagué" },
      { 
        name: "og:description", 
        content: "Abogados especialistas en derecho civil, penal, empresarial y laboral. Asesoría confiable en Ibagué, Tolima."
      },
      { name: "og:locale", content: "es_CO" },
      { name: "og:type", content: "website" },
      { name: "og:site_name", content: "Global Legal" },
      { name: "og:see_also", content: "https://www.instagram.com/globallegal24/" },
    ],
  }}
/>
	
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		scroll-behavior: smooth;
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Lora', serif;
	}
</style>
